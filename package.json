{
  "name": "@jlozovei/me",
  "version": "0.0.3",
  "description": "jlozovei personal website",
  "main": "n/a",
  "scripts": {
    "build": "gatsby build",
    "postbuild": "cp ./README.md ./public && cp ./CNAME ./public",
    "develop": "gatsby develop",
    "format": "prettier --write \"**/*.{js,json}\"",
    "start": "gatsby develop",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "jest --coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "babel-plugin-styled-components": "^1.13.3",
    "gatsby": "^3.15.0",
    "gatsby-plugin-feed": "^3.14.0",
    "gatsby-plugin-google-analytics": "^3.14.0",
    "gatsby-plugin-google-fonts": "^1.0.1",
    "gatsby-plugin-i18n": "^1.0.1",
    "gatsby-plugin-offline": "^4.14.0",
    "gatsby-plugin-react-helmet": "^4.14.0",
    "gatsby-plugin-sharp": "^4.25.1",
    "gatsby-plugin-styled-components": "^4.14.0",
    "gatsby-remark-copy-linked-files": "^4.11.0",
    "gatsby-remark-images": "^5.11.0",
    "gatsby-remark-prismjs": "^5.11.0",
    "gatsby-remark-responsive-iframe": "^4.11.0",
    "gatsby-remark-smartypants": "^4.11.0",
    "gatsby-source-filesystem": "^3.14.0",
    "gatsby-transformer-remark": "^4.11.0",
    "gatsby-transformer-sharp": "^3.14.0",
    "prismjs": "^1.27.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-redux": "^7.2.5",
    "redux": "^4.1.1",
    "redux-persist": "^6.0.0",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "babel-jest": "^27.3.1",
    "babel-preset-gatsby": "^1.14.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gatsby-plugin-root-import": "^2.0.7",
    "husky": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "react-test-renderer": "^17.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlozovei/me.git"
  },
  "author": "Julio Lozovei <jlozovei@gmail.com> (https://jlozovei.dev)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jlozovei/me/issues"
  },
  "homepage": ".",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/__mocks__/**/*.js",
      "<rootDir>/src/components/**/*.js",
      "<rootDir>/src/helpers/**/*.js"
    ],
    "globals": {
      "__PATH_PREFIX__": ""
    },
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss)$": "identity-obj-proxy",
      ".+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/file-mock.js"
    },
    "modulePaths": [
      "<rootDir>",
      "<rootDir>/src/"
    ],
    "setupFiles": [
      "<rootDir>/loadershim.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setup-test-env.js"
    ],
    "testURL": "http://localhost",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "node_modules",
      "\\.cache",
      "<rootDir>.*/public"
    ],
    "transform": {
      "^.+\\.js?$": "<rootDir>/jest-preprocess.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(gatsby)/)"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:jsx-a11y/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "jsx-a11y",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "lint-staged": {
    "src/**/*.{js,css}": [
      "npm run format"
    ],
    "*.js": "eslint --cache --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}